INIT
ITEM:__Me
EXTERN INT:%DestroyOnDisarm = 1
EXTERN ITEM:%ConnectedObject=null

EVENTS

EVENT Disarm
ON
	OnItemDisarmEvent(__Me, _, _, 1)
ACTIONS
	IF "!c1"
		IsEqual(%ConnectedObject, null)
	THEN
		ItemDie(%ConnectedObject, 1)
	ENDIF
	IF "c1" 
		IsEqual(%DestroyOnDisarm, 1)
	THEN
		ItemDie(__Me,1)
	ENDIF	
	
	