      "is_end": false,
      "node_type": "normal",
      "children": {
        "14": {
          "id": "14",
          "speaker": "Mirkon",
          "text": "We'll get out of here. You'll see.",
          "context": "",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "13": {
              "id": "13",
              "speaker": "Mirkon",
              "text": "And all the grown-ups and everyone will be all right.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "",
              "is_end": true,
