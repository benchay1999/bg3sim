      "checkflags": [
        "6a98f294-9f4f-d0b0-1cba-706f1cb15009_Local1 = False",
        "6a98f294-9f4f-d0b0-1cba-706f1cb15009_Local2 = False"
      ],
      "setflags": [
        "6a98f294-9f4f-d0b0-1cba-706f1cb15009_Local1"
      ],
      "ruletags": [],
      "approval": [],
      "rolls": "",
      "goto": "",
      "link": "",
      "is_end": false,
      "node_type": "normal",
      "children": {
        "0": {
          "id": "0",
          "speaker": "Mirkon",
          "text": "And Mol saw something glimmering in there?",
          "context": "",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "15": {
              "id": "15",
              "speaker": "Mirkon",
              "text": "So when I saw there was nobody on the beach, I snuck over.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "",
              "is_end": false,
              "node_type": "normal",
              "children": {
                "3": {
                  "id": "3",
                  "speaker": "Mirkon",
                  "text": "'Cause I can climb the cliffs no problem.",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "",
                  "is_end": true,
                  "node_type": "normal",
                  "children": {}
                }
              }
            }
          }
        }
      }
    },
    "10": {
      "id": "10",
      "speaker": "Mirkon",
      "text": "But suddenly someone was there.",
      "context": "",
      "checkflags": [
        "6a98f294-9f4f-d0b0-1cba-706f1cb15009_Local2"
      ],
      "setflags": [
        "6a98f294-9f4f-d0b0-1cba-706f1cb15009_Local3",
        "6a98f294-9f4f-d0b0-1cba-706f1cb15009_Local1",
