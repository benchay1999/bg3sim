      ],
      "ruletags": [],
      "approval": [],
      "rolls": "",
      "goto": "",
      "link": "",
      "is_end": false,
      "node_type": "normal",
      "children": {
        "9": {
          "id": "9",
          "speaker": "Mirkon",
          "text": "And the voice started screaming - saying that I was hers!",
          "context": "",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "5": {
              "id": "5",
              "speaker": "Mirkon",
              "text": "And when I looked up, there was a harpy, ready to tear me to shreds.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "",
              "is_end": true,
              "node_type": "normal",
              "children": {}
            }
          }
        }
      }
    },
    "11": {
      "id": "11",
      "speaker": "Mirkon",
      "text": "I was so scared I just hid.",
      "context": "",
      "checkflags": [
        "6a98f294-9f4f-d0b0-1cba-706f1cb15009_Local3",
        "6a98f294-9f4f-d0b0-1cba-706f1cb15009_Local1",
