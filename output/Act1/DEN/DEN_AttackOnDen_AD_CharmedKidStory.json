      "children": {
        "12": {
          "id": "12",
          "speaker": "Mirkon",
          "text": "But when I looked up, the harpy was gone!",
          "context": "",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
