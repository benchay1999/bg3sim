      "is_end": false,
      "node_type": "normal",
      "children": {
        "14": {
          "id": "14",
          "speaker": "Remira",
          "text": "And now you're back to stand with this lot. A right soft heart you've got, don't you?",
          "context": "",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "3",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "4": {
              "id": "4",
              "speaker": "Player",
              "text": "I could say the same for you.",
