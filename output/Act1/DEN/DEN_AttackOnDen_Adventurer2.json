              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "3",
              "is_end": false,
              "node_type": "normal",
              "children": {
                "10": {
                  "id": "10",
                  "speaker": "Remira",
                  "text": "Soft head, more like. If I were smart, I'd be back in Baldur's Gate with my feet up.",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "",
                  "is_end": false,
                  "node_type": "normal",
                  "children": {
                    "12": {
                      "id": "12",
                      "speaker": "Remira",
                      "text": "But this crowd patched Liam up when they had plenty reason not to. Might be I misjudged 'em.",
                      "context": "",
                      "checkflags": [],
                      "setflags": [],
                      "ruletags": [],
                      "approval": [],
                      "rolls": "",
                      "goto": "",
                      "link": "",
                      "is_end": false,
                      "node_type": "normal",
                      "children": {
                        "1": {
                          "id": "1",
                          "speaker": "Remira",
                          "text": "Still a lost cause, mind - but if you can't live smart, you may as well die right.",
                          "context": "",
                          "checkflags": [],
                          "setflags": [],
                          "ruletags": [],
                          "approval": [],
                          "rolls": "",
