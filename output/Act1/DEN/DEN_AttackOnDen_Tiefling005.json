          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "8",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "26": {
              "id": "26",
              "speaker": "Pandirna",
              "text": "You... mean that to be comforting, I'm sure. <br>",
