  "dialogue": {
    "4": {
      "id": "4",
      "speaker": "Zevlor",
      "text": "That's... that's the last of them. Tymora smile on me... they're dead.",
      "context": "CinematicNodeContext: Custom cameras needed\rNodeContext: Stunned, elated",
      "checkflags": [],
      "setflags": [],
      "ruletags": [],
      "approval": [
        "Gale 10",
        "Shadowheart 1",
        "Wyll 15",
        "Karlach 10"
