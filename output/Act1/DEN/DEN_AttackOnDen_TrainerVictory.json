                                                          "link": "",
                                                          "is_end": false,
                                                          "node_type": "normal",
                                                          "children": {
                                                            "1": {
                                                              "id": "1",
                                                              "speaker": "Asharak",
                                                              "text": "Find us once you're done. Twice the reason to celebrate now, eh?",
                                                              "context": "",
                                                              "checkflags": [],
                                                              "setflags": [
                                                                "DEN_AttackOnDen_Event_HalsinSpotted"
                                                              ],
