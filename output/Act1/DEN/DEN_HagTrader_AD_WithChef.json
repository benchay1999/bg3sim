      "node_type": "normal",
      "children": {
        "2": {
          "id": "2",
          "speaker": "",
          "text": "I had to! Kicked out of your own homes, poor things. How could I stay away?",
          "context": "NodeContext: Playing the concerned old granny",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
