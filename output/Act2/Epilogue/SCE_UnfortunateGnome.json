  "dialogue": {
    "1": {
      "id": "1",
      "speaker": "Barcus Wroot",
      "text": "There you are. I was wondering where the devil you'd been.",
      "context": "",
      "checkflags": [],
      "setflags": [
        "SCE_GnomeFollowUp_HasMet_WulbrenAlive"
