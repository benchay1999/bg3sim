            "31": {
              "id": "31",
              "speaker": "Halsin",
              "text": "Thaniel is trapped in the Shadowfell, but thanks to your efforts, I know where to look. Now I must go there - alone.",
              "context": "NodeContext: Thaniel rhymes with Daniel",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "2",
              "is_end": false,
              "node_type": "normal",
              "children": {
                "4": {
                  "id": "4",
                  "speaker": "Player",
                  "text": "Hold on - shouldn't I come with you?",
                  "context": "NodeContext: Grave. 'gotta do what I gotta do'",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "2",
                  "is_end": false,
                  "node_type": "normal",
                  "children": {
                    "5": {
                      "id": "5",
                      "speaker": "Halsin",
                      "text": "No. This opportunity has been a hundred years in the making. It has to be me, and only me.",
                      "context": "NodeContext: Grave. 'gotta do what I gotta do'",
                      "checkflags": [],
                      "setflags": [],
                      "ruletags": [],
                      "approval": [],
