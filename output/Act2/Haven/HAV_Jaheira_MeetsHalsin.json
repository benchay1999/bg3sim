                  "children": {
                    "3": {
                      "id": "3",
                      "speaker": "Jaheira",
                      "text": "Those of us who saw the birth of the shadow curse seem doomed to return, and bear witness to its work again.",
                      "context": "",
                      "checkflags": [],
                      "setflags": [],
                      "ruletags": [],
                      "approval": [],
