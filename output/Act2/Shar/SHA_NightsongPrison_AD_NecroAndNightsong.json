              "node_type": "normal",
              "children": {
                "1": {
                  "id": "1",
                  "speaker": "Balthazar",
                  "text": "Please, Aylin - spare me. Your insults grew tired and shopworn years ago.",
                  "context": "NodeContext: Unfazed",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
