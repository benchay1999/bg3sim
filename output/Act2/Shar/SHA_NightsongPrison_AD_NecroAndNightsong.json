          "is_end": false,
          "node_type": "normal",
          "children": {
            "10": {
              "id": "10",
              "speaker": "Nightsong",
              "text": "I'd live a thousand years in solitude than lay my eyes open thy putrid visage again.",
              "context": "NodeContext: Mocking",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
