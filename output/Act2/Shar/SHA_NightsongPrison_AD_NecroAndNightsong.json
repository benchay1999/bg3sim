      "node_type": "normal",
      "children": {
        "3": {
          "id": "3",
          "speaker": "Balthazar",
          "text": "Do you hunger for more company? Am I not enough to keep you sated?",
          "context": "NodeContext: teasing - 'oh, aren't I good enough?'",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
