        "12": {
          "id": "12",
          "speaker": "Nightsong",
          "text": "Do what you will. I cannot prevent you. But you know as well as I, I will come for you. One day.",
          "context": "NodeContext: Pitying",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
