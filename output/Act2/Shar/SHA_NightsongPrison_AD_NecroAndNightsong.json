          "children": {
            "4": {
              "id": "4",
              "speaker": "Balthazar",
              "text": "Poor child, so enthralled by gory revenge fantasies. You may find yourself disappointed by reality.",
              "context": "NodeContext: Pitying",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
