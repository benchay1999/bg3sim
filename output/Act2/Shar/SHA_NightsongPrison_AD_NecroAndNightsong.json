        "14": {
          "id": "14",
          "speaker": "Balthazar",
          "text": "Unkind, Aylin. Unkind and incorrect - I could never hate my masterwork.",
          "context": "NodeContext: Gently chiding",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
