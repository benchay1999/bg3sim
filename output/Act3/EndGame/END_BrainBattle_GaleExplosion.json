          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "22",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "4": {
              "id": "4",
              "speaker": "Gale",
              "text": "Don't worry - I'll handle matters from here. And gods willing, there'll be plenty of folk left to tell our tale after we're gone.",
