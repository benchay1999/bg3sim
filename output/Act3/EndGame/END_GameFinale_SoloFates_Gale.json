                        "47": {
                          "id": "47",
                          "speaker": "Player",
                          "text": "You're an illithid now - new worlds are yours to explore, for as long as you still live.",
                          "context": "",
                          "checkflags": [
                            "ORI_State_Partnered = False"
                          ],
                          "setflags": [
                            "END_BrainBattle_Event_Thrive"
                          ],
                          "ruletags": [],
                          "approval": [],
                          "rolls": "",
                          "goto": "",
                          "link": "",
                          "is_end": false,
                          "node_type": "normal",
                          "children": {
                            "43": {
                              "id": "43",
                              "speaker": "Narrator",
                              "text": "*You could start with Oryndoll, and perhaps later, Glyth itself. The world is yours to uncover, its stories yours to tell.*",
                              "context": "",
                              "checkflags": [],
                              "setflags": [],
                              "ruletags": [],
                              "approval": [],
                              "rolls": "",
                              "goto": "",
                              "link": "",
                              "is_end": true,
                              "node_type": "normal",
                              "children": {}
                            }
                          }
                        },
                        "21": {
                          "id": "21",
                          "speaker": "Player",
                          "text": "What does it matter? You're a mind flayer. This world is yours.",
                          "context": "",
                          "checkflags": [
                            "ORI_State_Partnered = False"
                          ],
                          "setflags": [
