                        },
                        "20": {
                          "id": "20",
                          "speaker": "Player",
                          "text": "You will return the Crown of Karsus to Mystra. She may yet see fit to redeem you.",
                          "context": "",
                          "checkflags": [],
                          "setflags": [
                            "ORI_Gale_Event_GaveCrownToMystra"
