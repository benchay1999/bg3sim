                                        "8": {
                                          "id": "8",
                                          "speaker": "Player",
                                          "text": "How did your sister come to be trapped here?",
                                          "context": "",
                                          "checkflags": [
                                            "LOW_HouseOfHope_HopeSpirit02_State_MentionedKorilla"
                                          ],
                                          "setflags": [],
                                          "ruletags": [],
