                                "12": {
                                  "id": "12",
                                  "speaker": "Korrilla",
                                  "text": "Don't you? I thought you had half a brain. Then again, you're here. Pretty much disproves any good sense you might've had, once upon a time.",
                                  "context": "",
                                  "checkflags": [],
                                  "setflags": [],
