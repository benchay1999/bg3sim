      "is_end": false,
      "node_type": "normal",
      "children": {
        "20": {
          "id": "20",
          "speaker": "Boss Friol",
          "text": "That was an unfortunate bit of business - but you handled yourself well. My thanks.",
          "context": "",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
