    "44": {
      "id": "44",
      "speaker": "Boss Friol",
      "text": "Not the fanciest office I've ever had, but it'll do.",
      "context": "",
      "checkflags": [
        "LOW_Guildhall_HasMet_ZhentLeader = False",
        "LOW_Guildhall_State_PostCoup_ZhentControlled"
