                "14": {
                  "id": "14",
                  "speaker": "Player",
                  "text": "I'm loyal to whoever can help me save this city.",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "",
                  "is_end": false,
