                    "18": {
                      "id": "18",
                      "speaker": "21783519-4c61-4e36-abd4-c9386303cade",
                      "text": "This house belongs to the druid Jaheira. Well - her daughter, really. I'm watching over it for her while the family's away.",
                      "context": "",
                      "checkflags": [],
                      "setflags": [],
                      "ruletags": [],
                      "approval": [],
