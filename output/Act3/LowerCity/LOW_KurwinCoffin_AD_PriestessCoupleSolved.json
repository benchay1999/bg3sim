          "children": {
            "7": {
              "id": "7",
              "speaker": "Mortarch Gracie Scyre",
              "text": "Noisy or not, I imagine your son misses his sister.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "",
