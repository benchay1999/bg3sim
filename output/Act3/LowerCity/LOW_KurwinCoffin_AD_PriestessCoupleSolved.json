      "is_end": false,
      "node_type": "normal",
      "children": {
        "5": {
          "id": "5",
          "speaker": "Anita Fischer",
          "text": "Honey, no - the gravekeeper said we couldn't.",
          "context": "",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
