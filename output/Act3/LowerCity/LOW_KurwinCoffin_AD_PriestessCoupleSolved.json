              "children": {
                "0": {
                  "id": "0",
                  "speaker": "Mortarch Gracie Scyre",
                  "text": "Death is not to be feared - it is to be accepted. Embraced. Perhaps attending will help?",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
