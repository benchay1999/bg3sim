          "children": {
            "1": {
              "id": "1",
              "speaker": "Mortarch Gracie Scyre",
              "text": "If it will be a comfort to you, then I shall speak to the gravekeeper.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "",
              "is_end": false,
              "node_type": "normal",
              "children": {
                "2": {
                  "id": "2",
                  "speaker": "Anita Fischer",
                  "text": "Thank you - thank you so much.",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "",
                  "is_end": true,
                  "node_type": "normal",
