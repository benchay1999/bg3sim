                                              "children": {
                                                "37": {
                                                  "id": "37",
                                                  "speaker": "Echo of Illasera",
                                                  "text": "Your birth, your creation... Father tended to you with love... He made you perfection...",
                                                  "context": "",
                                                  "checkflags": [],
                                                  "setflags": [],
                                                  "ruletags": [],
                                                  "approval": [],
