                                    "4": {
                                      "id": "4",
                                      "speaker": "Echo of Illasera",
                                      "text": "I am Illasera the Quick. Child of Bhaal. Slayer of his idle children. Cut down before my time.",
                                      "context": "",
                                      "checkflags": [],
                                      "setflags": [],
                                      "ruletags": [],
                                      "approval": [],
                                      "rolls": "",
                                      "goto": "",
                                      "link": "",
