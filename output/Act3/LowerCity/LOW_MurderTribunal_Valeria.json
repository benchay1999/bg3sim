          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "2",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "10": {
              "id": "10",
              "speaker": "Valeria",
              "text": "Though I do wish you'd figured this all out before I - ah - put the blame for Father Lorgan's murder on that poor refugee. Well. At least it's over now.",
              "context": "",
              "checkflags": [
                "WYR_OpenHand_Knows_Murder"
              ],
              "setflags": [
                "WYR_OpenHand_State_ValeriaKnowsBrilgorInnocent"
