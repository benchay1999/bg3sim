              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "2",
              "is_end": false,
              "node_type": "normal",
              "children": {
                "6": {
                  "id": "6",
                  "speaker": "Player",
                  "text": "I didn't do it for you. I did it to gain access to Orin.",
