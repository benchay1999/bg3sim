                  "goto": "",
                  "link": "",
                  "is_end": false,
                  "node_type": "normal",
                  "children": {
                    "14": {
                      "id": "14",
                      "speaker": "Doppelganger",
                      "text": "There you shall be judged. There you shall transcend.",
