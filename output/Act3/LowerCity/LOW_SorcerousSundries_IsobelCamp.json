  "dialogue": {
    "5": {
      "id": "5",
      "speaker": "Isobel",
      "text": "Aylin left to face that wizard - Lorroakan, was it?",
      "context": "",
      "checkflags": [
        "LOW_SorcerousSundries_HasMet_IsobelAfterNightsongLeaving = False"
      ],
      "setflags": [
        "LOW_SorcerousSundries_HasMet_IsobelAfterNightsongLeaving"
