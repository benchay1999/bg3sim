        },
        "2": {
          "id": "2",
          "speaker": "Player",
          "text": "She's been through a lot. Give her time.",
          "context": "",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "15",
