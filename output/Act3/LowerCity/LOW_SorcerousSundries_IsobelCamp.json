        "18": {
          "id": "18",
          "speaker": "Player",
          "text": "I suppose she's tired of power-hungry mages trying to steal her immortality.",
          "context": "",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "15",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "3": {
              "id": "3",
              "speaker": "Isobel",
              "text": "It's not a problem most of us have.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "",
              "is_end": false,
              "node_type": "normal",
              "children": {
                "15": {
                  "id": "15",
                  "speaker": "Isobel",
                  "text": "My poor darling. She's singular among us all.",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "",
                  "is_end": false,
                  "node_type": "normal",
                  "children": {
                    "8": {
                      "id": "8",
                      "speaker": "Isobel",
                      "text": "Thank you for fighting by her side. It means more to her - to me - than you know.",
                      "context": "",
                      "checkflags": [],
                      "setflags": [],
                      "ruletags": [],
                      "approval": [],
                      "rolls": "",
                      "goto": "",
                      "link": "",
                      "is_end": true,
                      "node_type": "normal",
                      "children": {}
                    }
                  }
                }
              }
            }
