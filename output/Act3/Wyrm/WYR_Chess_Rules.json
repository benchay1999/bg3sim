          "children": {
            "9": {
              "id": "9",
              "speaker": "",
              "text": "Are you a commander of armies, or a shivering pawn - fodder for cleverer minds?",
              "context": "NodeContext: Knows exactly what he's talking about, giving clear direction (important - player will have to follow it)",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
