        "15": {
          "id": "15",
          "speaker": "",
          "text": "There is but one rule: The dark king must fall in two moves.",
          "context": "NodeContext: Knows exactly what he's talking about, giving clear direction (important - player will have to follow it)",
          "checkflags": [],
          "setflags": [],
