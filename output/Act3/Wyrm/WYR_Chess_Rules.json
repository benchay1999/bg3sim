                            "5": {
                              "id": "5",
                              "speaker": "Gale",
                              "text": "I've been known to shuffle a few knights around in my day. Might I offer a suggestion?",
                              "context": "NodeContext: Knows exactly what he's talking about, giving clear direction (important - player will have to follow it)",
                              "checkflags": [],
                              "setflags": [
