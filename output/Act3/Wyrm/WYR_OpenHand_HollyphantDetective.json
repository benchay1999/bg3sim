                          "checkflags": [],
                          "setflags": [],
                          "ruletags": [],
                          "approval": [],
                          "rolls": "",
                          "goto": "",
                          "link": "",
                          "is_end": false,
                          "node_type": "normal",
                          "children": {
                            "4": {
                              "id": "4",
                              "speaker": "Valeria",
                              "text": "I never ask you lumbering, fleshy apes about your various parts and pores. The cheek.",
