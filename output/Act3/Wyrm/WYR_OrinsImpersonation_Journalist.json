                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "2",
                  "is_end": false,
                  "node_type": "normal",
                  "children": {
                    "21": {
                      "id": "21",
                      "speaker": "Lens the Journalist",
                      "text": "My editor at the Baldur's Mouth Gazette sent me down to get a first-hand account of the chaos.",
