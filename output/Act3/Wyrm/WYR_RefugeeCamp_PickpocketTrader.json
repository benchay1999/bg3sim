        "32": {
          "id": "32",
          "speaker": "Player",
          "text": "Where are you from?",
          "context": "",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "0",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "33": {
              "id": "33",
              "speaker": "Mattis",
              "text": "Elturel. It wasn't near as big as the Gate even before half of it burned up in the Hells.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "0",
              "is_end": false,
              "node_type": "normal",
              "children": {}
            }
          }
        },
        "18": {
          "id": "18",
          "speaker": "Player",
          "text": "Wonderful, isn't it?",
          "context": "",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "24": {
              "id": "24",
              "speaker": "Mattis",
              "text": "You can say that again... So many pockets to pick.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "",
              "is_end": false,
              "node_type": "normal",
              "children": {
                "0": {
                  "id": "0",
                  "speaker": "Mattis",
                  "text": "Wait, I know you! You're the reason some of us got here in one piece. Thanks!",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "",
                  "is_end": false,
                  "node_type": "normal",
                  "children": {
                    "34": {
                      "id": "34",
                      "speaker": "Mattis",
                      "text": "And you're in luck, because we're having a special sale on some of the choice items I picked up on our way here. Fancy stuff. Wanna see?",
                      "context": "",
                      "checkflags": [],
                      "setflags": [
                        "WYR_RefugeeCamp_HasMet_PickpocketTrader"
                      ],
                      "ruletags": [],
                      "approval": [],
                      "rolls": "",
                      "goto": "",
                      "link": "",
                      "is_end": false,
                      "node_type": "normal",
                      "children": {
                        "10": {
                          "id": "10",
                          "speaker": "Player",
                          "text": "Tell me these items aren't stolen from the goods donated to the refugees.",
                          "context": "",
                          "checkflags": [
                            "WYR_RefugeeCamp_FlamingFistManip_State_Defeated = False",
                            "WYR_RefugeeCamp_Knows_Donations",
