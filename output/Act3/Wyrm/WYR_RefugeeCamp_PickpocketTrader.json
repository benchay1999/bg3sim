    "2": {
      "id": "2",
      "speaker": "Mattis",
      "text": "Pardon if my eyes are all saucer-like. I didn't realise Baldur's Gate was so big.",
      "context": "",
      "checkflags": [
        "WYR_RefugeeCamp_HasMet_PickpocketTrader = False"
      ],
      "setflags": [
        "WYR_RefugeeCamp_HasMet_PickpocketTrader"
      ],
      "ruletags": [],
      "approval": [],
      "rolls": "",
      "goto": "",
      "link": "0",
      "is_end": false,
      "node_type": "normal",
      "children": {
        "11": {
          "id": "11",
          "speaker": "Player",
          "text": "It's unnerving to see a city almost as large as a great forest.",
          "context": "",
          "checkflags": [
            "DRUID"
          ],
          "setflags": [],
          "ruletags": [],
          "approval": [
            "Halsin 1"
          ],
          "rolls": "",
          "goto": "",
          "link": "0",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "28": {
              "id": "28",
              "speaker": "Mattis",
              "text": "I prefer cities to forests - pull a con on a squirrel, and all you get is nuts.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "0",
              "is_end": false,
              "node_type": "normal",
              "children": {}
            }
          }
        },
        "27": {
          "id": "27",
          "speaker": "Player",
          "text": "Big and dangerous. Watch yourself, kid.",
          "context": "",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [
            "Wyll 1",
            "Karlach 1",
            "Shadowheart 1",
