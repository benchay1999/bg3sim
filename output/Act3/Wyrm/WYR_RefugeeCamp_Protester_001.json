        "30": {
          "id": "30",
          "speaker": "Fist Lochan",
          "text": "Please just go home - you're ruining a perfectly uneventful posting with this nonsense.",
          "context": "NodeContext: Weary/annoyed; trying to wrangle anti-refugee protestors",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
