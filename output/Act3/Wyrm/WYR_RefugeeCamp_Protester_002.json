                      "link": "",
                      "is_end": true,
                      "node_type": "normal",
                      "children": {}
                    },
                    "6": {
                      "id": "6",
                      "speaker": "Mandii Harvestmoon",
                      "text": "Let's hope Archduke Gortash can make a difference.",
                      "context": "",
                      "checkflags": [],
                      "setflags": [],
                      "ruletags": [],
                      "approval": [],
                      "rolls": "",
                      "goto": "",
                      "link": "",
                      "is_end": true,
                      "node_type": "normal",
                      "children": {}
                    }
                  }
                }
              }
            }
          }
        },
        "1": {
          "id": "1",
          "speaker": "Player",
          "text": "Leave.",
          "context": "",
