                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "",
                  "is_end": false,
                  "node_type": "rollresult",
                  "children": {
                    "3": {
                      "id": "3",
                      "speaker": "Ricks Garven",
                      "text": "AH! Oh gods oh gods - look, let me live, and I'll say nothing. I swear it. Just leave me and mine alone.",
