                  "children": {
                    "6": {
                      "id": "6",
                      "speaker": "Ricks Garven",
                      "text": "Oh come off it now, that's not funny. The Absolute is a real, genuine threat.",
                      "context": "",
                      "checkflags": [],
                      "setflags": [],
                      "ruletags": [],
                      "approval": [],
                      "rolls": "",
                      "goto": "",
                      "link": "",
                      "is_end": true,
