    "14": {
      "id": "14",
      "speaker": "Gronch",
      "text": "Aghkk! Whatever you need, I can't help you. Even talking is painful right now.",
      "context": "NodeContext: quite over the top - pretending to be wounded",
      "checkflags": [
        "WYR_RefugeeCamp_HasMet_WoundedRefugee = False"
