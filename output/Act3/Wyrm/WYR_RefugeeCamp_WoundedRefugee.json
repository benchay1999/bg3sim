                "6": {
                  "id": "6",
                  "speaker": "Gronch",
                  "text": "Don't worry about my 'wound' - it gives me a reason to keep an eye on those tanglefoot Bright lads. I'd like to keep them out of trouble.",
                  "context": "NodeContext: conspiratorially",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "",
                  "is_end": true,
