      "is_end": false,
      "node_type": "normal",
      "children": {
        "3": {
          "id": "3",
          "speaker": "Iwan",
          "text": "It won't. Soon the bastards will outnumber us. They'll come for our homes, our jobs - everything.",
          "context": "",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
