          "node_type": "normal",
          "children": {
            "7": {
              "id": "7",
              "speaker": "Rhett",
              "text": "Kick 'em all out!",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "",
              "is_end": false,
              "node_type": "normal",
              "children": {
                "1": {
                  "id": "1",
                  "speaker": "Iwan",
                  "text": "We won't need to. If we do this right, they'll run for the damn hills.",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
