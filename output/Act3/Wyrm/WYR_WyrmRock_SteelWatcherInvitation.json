                "10": {
                  "id": "10",
                  "speaker": "Steel Watcher",
                  "text": "Welcome back to Baldur's Gate - welcome home.",
                  "context": "InternalNodeContext: Voice only, no mocap. Voice coming from Steel Watcher.\rNodeContext: warm",
