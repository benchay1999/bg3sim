      "is_end": false,
      "node_type": "normal",
      "children": {
        "18": {
          "id": "18",
          "speaker": "Tara the Tressym",
          "text": "I've something for you. A letter from Elminster himself. He was most insistent I give it to you immediately upon your return.",
          "context": "CinematicNodeContext: Gale reads the letter (looking down at it, doesn't have to be shown)",
          "checkflags": [],
          "setflags": [],
          "ruletags": [],
          "approval": [],
