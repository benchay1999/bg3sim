                                                        "22": {
                                                          "id": "22",
                                                          "speaker": "Tara the Tressym",
                                                          "text": "What kind of companion would I be were I to sneak a peek?",
                                                          "context": "NodeContext: A little telling, like she plans to read it later.",
                                                          "checkflags": [],
                                                          "setflags": [],
                                                          "ruletags": [],
