  "dialogue": {
    "19": {
      "id": "19",
      "speaker": "Karlach",
      "text": "Let me get one last look at you in case the brain bug  takes us in the night. There. Got it.",
      "context": "NodeContext: Lost in thought, concentrating, then suddenly surprised by the player.",
      "checkflags": [
        "CAMP_Global_State_Night3Com"
      ],
      "setflags": [],
      "ruletags": [],
      "approval": [],
      "rolls": "",
      "goto": "",
