                  "is_end": false,
                  "node_type": "normal",
                  "children": {
                    "7": {
                      "id": "7",
                      "speaker": "Karlach",
                      "text": "Hah. She'd turn us both into sheep, then serve mutton for dinner. Let's stay here, where it's nice. For as long as we can.",
                      "context": "",
                      "checkflags": [],
                      "setflags": [],
                      "ruletags": [],
                      "approval": [],
                      "rolls": "",
                      "goto": "",
