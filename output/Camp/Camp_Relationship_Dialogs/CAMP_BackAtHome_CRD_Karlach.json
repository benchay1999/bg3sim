                  "node_type": "normal",
                  "children": {
                    "20": {
                      "id": "20",
                      "speaker": "Karlach",
                      "text": "Bit sweaty, but up for whatever's next. Thanks, soldier.",
                      "context": "",
                      "checkflags": [],
                      "setflags": [],
                      "ruletags": [],
                      "approval": [],
                      "rolls": "",
                      "goto": "",
                      "link": "",
                      "is_end": false,
                      "node_type": "normal",
                      "children": {
                        "31": {
                          "id": "31",
                          "speaker": "Karlach",
                          "text": "Can't wait to be home. Anything that comes after that is extra.",
                          "context": "",
                          "checkflags": [],
                          "setflags": [],
                          "ruletags": [],
                          "approval": [],
                          "rolls": "",
                          "goto": "",
                          "link": "",
