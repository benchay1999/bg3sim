                "11": {
                  "id": "11",
                  "speaker": "Player",
                  "text": "You don't think we'll find you a cure?",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "",
                  "is_end": false,
                  "node_type": "normal",
                  "children": {
                    "4": {
                      "id": "4",
                      "speaker": "Karlach",
                      "text": "With this heat going, I can't spare the energy to think. I just want to enjoy whatever's left of this life of mine.",
                      "context": "",
                      "checkflags": [],
                      "setflags": [],
                      "ruletags": [],
                      "approval": [],
                      "rolls": "",
                      "goto": "",
                      "link": "",
                      "is_end": false,
                      "node_type": "normal",
                      "children": {
                        "24": {
                          "id": "24",
                          "speaker": "Karlach",
                          "text": "Anyway, it could be worse. I'm exactly where I'm supposed to be. With who I'm meant to be with. How many people can say that?",
                          "context": "",
                          "checkflags": [],
                          "setflags": [],
                          "ruletags": [],
                          "approval": [],
                          "rolls": "",
                          "goto": "",
                          "link": "",
                          "is_end": true,
                          "node_type": "normal",
                          "children": {}
                        }
                      }
                    }
                  }
                },
                "13": {
                  "id": "13",
                  "speaker": "Player",
                  "text": "No - it's between you and Gortash.",
