              "link": "",
              "is_end": false,
              "node_type": "normal",
              "children": {
                "25": {
                  "id": "25",
                  "speaker": "Player",
                  "text": "I'm ready if you are.",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
