            "8": {
              "id": "8",
              "speaker": "Player",
              "text": "I don't deserve such praise. I serve a higher power.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [
                "CLERIC_GOOD",
                "CLERIC_NEUTRAL"
              ],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "",
              "is_end": false,
              "node_type": "normal",
              "children": {
                "18": {
                  "id": "18",
                  "speaker": "Alfira",
                  "text": "Pfft. The gods have enough people singing about them. But fine - I'll do my best!",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "",
                  "is_end": true,
