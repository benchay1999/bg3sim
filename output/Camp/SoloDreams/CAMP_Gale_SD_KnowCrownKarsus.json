              }
            },
            "10": {
              "id": "10",
              "speaker": "Gale",
              "text": "Nothing, unless you can find a way to defeat the elder brain...",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
