          "children": {
            "11": {
              "id": "11",
              "speaker": "Player",
              "text": "I'd like to at least steal another evening from you.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "22",
              "is_end": false,
              "node_type": "normal",
              "children": {
                "17": {
                  "id": "17",
                  "speaker": "Astarion",
                  "text": "And why exactly would I want to do that?",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "22",
