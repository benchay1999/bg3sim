                        "14": {
                          "id": "14",
                          "speaker": "Halsin",
                          "text": "A fine point. I wish I had thought of it myself.",
                          "context": "NodeContext: Softening/touched.",
                          "checkflags": [],
                          "setflags": [],
                          "ruletags": [],
                          "approval": [],
                          "rolls": "",
                          "goto": "",
