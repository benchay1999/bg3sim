                    "5": {
                      "id": "5",
                      "speaker": "Player",
                      "text": "The Shadow Druids peddle easy answers and sow division. Don't fall for their rhetoric.",
                      "context": "NodeContext: Conceding the point",
                      "checkflags": [
                        "DEN_ShadowDruid_Event_StartDenouncingScene"
                      ],
                      "setflags": [],
                      "ruletags": [],
