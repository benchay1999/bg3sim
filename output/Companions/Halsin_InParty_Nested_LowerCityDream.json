                    "13": {
                      "id": "13",
                      "speaker": "Player",
                      "text": "Civilisation is but an extension of nature. They can thrive together, if given the chance. Same as Thaniel and Oliver.",
                      "context": "NodeContext: Softening/touched.",
                      "checkflags": [],
                      "setflags": [],
                      "ruletags": [],
                      "approval": [],
                      "rolls": "",
                      "goto": "",
