      "children": {
        "25": {
          "id": "25",
          "speaker": "Jaheira",
          "text": "...Ah. You've wandered far in my absence. And now you come to march me to the gallows, is it?",
          "context": "",
          "checkflags": [],
          "setflags": [
            "Jaheira_InParty_PlayerKnowsAboutFamily"
          ],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "11": {
              "id": "11",
              "speaker": "Jaheira",
              "text": "Come on, then. Likely you have some pointed questions, but you shall have to get in line behind my dear, dear daughter.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "",
              "is_end": false,
              "node_type": "normal",
              "children": {}
            }
          }
        }
      }
    },
    "24": {
      "id": "24",
      "speaker": "Jaheira",
      "text": "",
      "context": "",
      "checkflags": [
        "Jaheira_InParty_SpokeOfDanthelonAttack = False",
        "Jaheira_InParty_ND_SentViaHarpers",
        "CURRENTREGION_INT_Main_A = False",
