    "11": {
      "id": "11",
      "speaker": "Jaheira",
      "text": "Was this your purpose all along, then? To aid me in saving my friend, only to trade him like cattle at the first convenience?",
      "context": "",
      "checkflags": [
        "LOW_MurderTribunal_State_OfferedMinscSacrifice"
      ],
      "setflags": [
        "GLO_Companion_Leave"
      ],
