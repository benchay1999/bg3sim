      "approval": [],
      "rolls": "",
      "goto": "",
      "link": "22",
      "is_end": false,
      "node_type": "normal",
      "children": {
        "8": {
          "id": "8",
          "speaker": "Jaheira",
          "text": "I cannot give you the death you deserve. Not without damning the city along with you. But I will not stay at your side a moment longer.",
          "context": "",
          "checkflags": [],
          "setflags": [
            "GLO_Companion_Leave"
          ],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "25": {
              "id": "25",
              "speaker": "Jaheira",
              "text": "Kill the Absolute - and should you die in the attempt, it would be a better end than you deserve.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "",
              "is_end": true,
