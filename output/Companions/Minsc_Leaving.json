                  "children": {
                    "17": {
                      "id": "17",
                      "speaker": "Jaheira",
                      "text": "Understand that I must go with him. He cannot stay by your side - and I cannot abandon him to the Absolute again.",
                      "context": "NodeContext: Only vaguely apologetic - she's going with Minsc, even if she personally has no issue with us",
                      "checkflags": [
                        "Approval_AtLeast_50_For_Sp2"
                      ],
                      "setflags": [
                        "GLO_Companion_Leave"
                      ],
                      "ruletags": [],
                      "approval": [],
                      "rolls": "",
