                          "node_type": "taganswer",
                          "children": {
                            "2": {
                              "id": "2",
                              "speaker": "Minsc",
                              "text": "Set yourself to rights - should our paths cross again, my hamster will not show such restraint!",
                              "context": "",
                              "checkflags": [],
                              "setflags": [
                                "GLO_Companion_Leave"
                              ],
