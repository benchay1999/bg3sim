                                  "checkflags": [],
                                  "setflags": [],
                                  "ruletags": [],
                                  "approval": [],
                                  "rolls": "",
                                  "goto": "",
                                  "link": "",
                                  "is_end": false,
                                  "node_type": "normal",
                                  "children": {
                                    "26": {
                                      "id": "26",
                                      "speaker": "Karlach",
                                      "text": "From the look of things, you've got your wits about you. A clever mind and a bit of style will take you a long way.",
