                            "29": {
                              "id": "29",
                              "speaker": "Karlach",
                              "text": "Had to. Life didn't pull any punches. It was up to me to learn to take a hit - and deal one back.",
                              "context": "",
                              "checkflags": [],
                              "setflags": [],
                              "ruletags": [],
                              "approval": [],
                              "rolls": "",
