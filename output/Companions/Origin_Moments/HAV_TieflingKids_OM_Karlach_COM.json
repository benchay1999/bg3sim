                                          "checkflags": [],
                                          "setflags": [],
                                          "ruletags": [],
                                          "approval": [],
                                          "rolls": "",
                                          "goto": "",
                                          "link": "",
                                          "is_end": false,
                                          "node_type": "normal",
                                          "children": {
                                            "24": {
                                              "id": "24",
                                              "speaker": "Mattis",
                                              "text": "In that case, want to buy a lucky ring I found?",
