            "3": {
              "id": "3",
              "speaker": "Shadowheart",
              "text": "Let me enter.",
              "context": "",
              "checkflags": [
                "LOW_HouseOfGrief_Knows_IsSharCult"
              ],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "6",
              "is_end": false,
              "node_type": "normal",
              "children": {
                "6": {
                  "id": "6",
                  "speaker": "Mirie",
                  "text": "You think you are in a position to make demands? This is the Mother Superior's house, raised in Lady Shar's honour, for the pursuit of her greatness.",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "",
                  "is_end": false,
                  "node_type": "normal",
                  "children": {
                    "16": {
                      "id": "16",
                      "speaker": "Mirie",
                      "text": "Show respect - you can fall much, much farther if you try the Mother Superior's patience.",
                      "context": "",
                      "checkflags": [],
                      "setflags": [],
                      "ruletags": [],
                      "approval": [],
                      "rolls": "",
                      "goto": "",
                      "link": "",
                      "is_end": false,
                      "node_type": "normal",
                      "children": {
                        "14": {
                          "id": "14",
                          "speaker": "Mirie",
                          "text": "First you must submit to the Mapping of the Heart. Then we will see exactly how far you have strayed.",
