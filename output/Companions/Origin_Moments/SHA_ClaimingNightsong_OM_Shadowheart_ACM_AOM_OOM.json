                            "32": {
                              "id": "32",
                              "speaker": "Shar",
                              "text": "Indeed. Welcome. It has been a long road to bring you back to me. But there is more I need of you. Listen closely:",
                              "context": "",
                              "checkflags": [],
                              "setflags": [],
                              "ruletags": [],
