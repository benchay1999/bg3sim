                                  "approval": [],
                                  "rolls": "",
                                  "goto": "",
                                  "link": "29",
                                  "is_end": false,
                                  "node_type": "normal",
                                  "children": {
                                    "25": {
                                      "id": "25",
                                      "speaker": "Ferg Drogher",
                                      "text": "I'm afraid the quarrel is unavoidable, thanks to you.",
