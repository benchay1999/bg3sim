          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "33",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "15": {
              "id": "15",
              "speaker": "Gale",
              "text": "The thought must have crossed your mind? It has certainly weighed on mine.",
