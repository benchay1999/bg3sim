  "dialogue": {
    "12": {
      "id": "12",
      "speaker": "Narrator",
      "text": "*Your escape has been cut short. Choose your next move wisely.*",
      "context": "",
      "checkflags": [
        "GEB_Arrest_HavePrison"
      ],
      "setflags": [],
      "ruletags": [],
      "approval": [],
      "rolls": "",
      "goto": "",
      "link": "2",
      "is_end": false,
      "node_type": "normal",
      "children": {
        "0": {
          "id": "0",
          "speaker": "Player",
          "text": "Give in and return to your cell.",
          "context": "",
          "checkflags": [
            "JAILOR = False"
          ],
          "setflags": [
            "Allow_Arrest"
          ],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "",
          "is_end": true,
          "node_type": "normal",
          "children": {}
        },
        "9": {
          "id": "9",
          "speaker": "Player",
          "text": "Try to talk your way out of this.",
          "context": "",
          "checkflags": [
            "GEB_CharismaDisabled = False"
          ],
          "setflags": [],
          "ruletags": [],
          "approval": [],
          "rolls": "",
          "goto": "",
          "link": "2",
          "is_end": false,
          "node_type": "normal",
          "children": {
            "6": {
              "id": "6",
              "speaker": "Player",
              "text": "I've been summoned to stand trial. Better not keep them waiting.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "2",
              "is_end": false,
              "node_type": "normal",
              "children": {
                "2": {
                  "id": "2",
                  "speaker": "Narrator",
                  "text": "*You prove hard to argue with. You're free to go.*",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "",
                  "is_end": false,
                  "node_type": "rollresult",
                  "children": {
                    "18": {
                      "id": "18",
                      "speaker": "Narrator",
                      "text": "*Your words are convincing. You may leave, and if you're lucky, you'll never come back.*",
                      "context": "",
                      "checkflags": [],
                      "setflags": [
                        "GEB_ClearTag_FUGITIVE",
                        "CRIME_PersuasionSuccess"
                      ],
                      "ruletags": [],
                      "approval": [],
                      "rolls": "",
                      "goto": "",
                      "link": "",
                      "is_end": true,
                      "node_type": "normal",
                      "children": {}
                    }
                  }
                },
                "1": {
                  "id": "1",
                  "speaker": "",
                  "text": "*Your words counted for nothing. You're headed back to your cell.*",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "",
                  "is_end": false,
                  "node_type": "rollresult",
                  "children": {
                    "11": {
                      "id": "11",
                      "speaker": "Narrator",
                      "text": "*You were unconvincing. You're being taken back to your cell.*",
                      "context": "",
                      "checkflags": [],
                      "setflags": [
                        "Allow_Arrest"
                      ],
                      "ruletags": [],
                      "approval": [],
                      "rolls": "",
                      "goto": "",
                      "link": "",
                      "is_end": true,
                      "node_type": "normal",
                      "children": {}
                    }
                  }
                }
              }
            },
            "17": {
              "id": "17",
              "speaker": "Player",
              "text": "I had a lot of time to think in prison. About killing you, for example.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "2",
              "is_end": false,
              "node_type": "normal",
              "children": {}
            },
            "10": {
              "id": "10",
              "speaker": "Player",
              "text": "If you let me go, that's one less head to count. It's a win-win.",
              "context": "",
              "checkflags": [],
              "setflags": [],
              "ruletags": [],
              "approval": [],
              "rolls": "",
              "goto": "",
              "link": "2",
              "is_end": false,
              "node_type": "normal",
              "children": {}
            }
          }
        },
        "8": {
          "id": "8",
          "speaker": "Player",
          "text": "Maybe a bit of gold would change your mind? ([GEN_CheckMagicPocketGold_6057ad05-9492-4630-9f0a-be548b134c54])",
