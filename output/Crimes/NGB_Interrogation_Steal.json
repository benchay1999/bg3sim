              "node_type": "normal",
              "children": {
                "26": {
                  "id": "26",
                  "speaker": "Player",
                  "text": "I heard the thief's already been caught.",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "13",
                  "is_end": false,
                  "node_type": "normal",
                  "children": {}
                },
                "6": {
                  "id": "6",
                  "speaker": "Player",
                  "text": "Go on, accuse me of something. See what happens.",
                  "context": "",
                  "checkflags": [],
                  "setflags": [],
                  "ruletags": [],
                  "approval": [],
                  "rolls": "",
                  "goto": "",
                  "link": "13",
                  "is_end": false,
                  "node_type": "normal",
                  "children": {
                    "13": {
                      "id": "13",
                      "speaker": "Narrator",
                      "text": "*You've been given the benefit of the doubt this time, but something tells you next time you won't be so lucky.*",
                      "context": "",
                      "checkflags": [],
                      "setflags": [],
                      "ruletags": [],
                      "approval": [],
                      "rolls": "",
                      "goto": "",
                      "link": "",
                      "is_end": false,
                      "node_type": "rollresult",
                      "children": {
                        "20": {
                          "id": "20",
                          "speaker": "Narrator",
                          "text": "*You'll walk free, for now, but your stories won't land so well if you're caught again.*",
                          "context": "",
                          "checkflags": [
                            "GEB_CharismaDisabled_NextTime"
                          ],
                          "setflags": [
                            "CRIME_PersuasionSuccess"
                          ],
                          "ruletags": [],
                          "approval": [],
                          "rolls": "",
                          "goto": "",
                          "link": "",
                          "is_end": true,
                          "node_type": "normal",
                          "children": {}
                        },
                        "7": {
                          "id": "7",
                          "speaker": "Narrator",
                          "text": "*Your silken words deflect any suspicion. Your presence here is beyond reproach.*",
                          "context": "",
                          "checkflags": [],
                          "setflags": [
                            "CRIME_PersuasionSuccess"
                          ],
                          "ruletags": [],
                          "approval": [],
                          "rolls": "",
                          "goto": "",
                          "link": "",
                          "is_end": true,
                          "node_type": "normal",
                          "children": {}
                        }
                      }
                    },
                    "16": {
                      "id": "16",
                      "speaker": "",
                      "text": "*Your words have only made things worse. The guards will be hearing about this.*",
