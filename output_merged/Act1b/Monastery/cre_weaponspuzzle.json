    "individual_metadata": {
      "AD_Abbot2Plaque": {
        "synopsis": "Inscription on the second of the 4 altars for the weapons puzzle.",
        "how_to_trigger": "Click on the Plaque on the second altar in the weapons puzzle at 79; 25; 76"
      },
      "PAD_HiddenNoteReaction": {
        "synopsis": "The character comments on a note left by the last dawnmaster next to the hidden key in the weapons puzzle. The note cryptically refers to the Blood of Lathander, and catches the Player character's attention.",
        "how_to_trigger": "- Tun on Roll Amazing,- On CRE_Main_A go to 74; 24; 81 and pick the lock on the hidden door (S_CRE_WeaponsPuzzle_HiddenDoor)- Read the note in the bag, and close it. The translated string ID of the note is: CRE_WeaponsPuzzle_HastyNote"
      },
      "PAD_RemovedWeaponReaction": {
        "synopsis": "The player comments on the fact that the weapon removed from the altar no longer glows.",
        "how_to_trigger": "As part of the weapons puzzle in the monastery, remove one of the ceremonial weapons form the altar. Location: near 77; 25; 75, CEW_Main_A."
      },
      "AD_Abbot3Plaque": {
        "synopsis": "Inscription on third of the 4 altars for the weapons puzzle.",
        "how_to_trigger": "Click on the Plaque on the third altar in the weapons puzzle at 69; 25; 76"
      },
      "GlassWindow": {
        "synopsis": "The player inspects the glass window in the museum chamber of the Monastery.",
        "how_to_trigger": "Load into CRE_Main_A. Go to 74; 23; 66 Click on S_CRE_PuzzleGlassWindow_40aac2f6-3936-401d-a0c3-329d704088d7 (giant glass window on the ground)"
      },
      "PAD_GenericWeaponReaction": {
        "synopsis": "The player characters comment on how the weapon puzzle  in the Abbot's room accepts any weapon of the correct type, not just the ceremonial weapons.",
        "how_to_trigger": "Place a correct generic weapon on an altar in the Weapons puzzle in the Monastery of Lathander (CRE_Main_A) (can teleport to Abbot's Room in the debug book). Note: it will not trigger if a ceremonial weapon is used."
      },
      "AD_Abbot1Plaque": {
        "synopsis": "Inscription on the first of the 4 altars for the weapons puzzle.",
        "how_to_trigger": "Click on the Plaque on the first altar in the weapons puzzle at 79; 25; 67."
      },
      "AD_Abbot4Plaque": {
        "synopsis": "Inscription on fourth of the 4 altars for the weapons puzzle.",
        "how_to_trigger": "Click on the Plaque on the fourth altar in the weapons puzzle at 69; 25; 67"
      }
    },
