                              "node_type": "normal",
                              "children": {
                                "Rules_8": {
                                  "id": "Rules_8",
                                  "speaker": "Player",
                                  "text": "Go ahead, Gale. I'm listening.",
                                  "context": "",
                                  "checkflags": [],
