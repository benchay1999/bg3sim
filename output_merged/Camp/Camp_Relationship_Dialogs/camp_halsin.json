                          "children": {
                            "Minthara_CFM_Confrontation_16": {
                              "id": "Minthara_CFM_Confrontation_16",
                              "speaker": "Nightwarden Minthara",
                              "text": "Spare me your sanctimony, druid. You kill to preserve your natural order, do you not? Or are the claws and fangs simply for show?",
                              "context": "",
                              "checkflags": [],
                              "setflags": [],
                              "ruletags": [],
                              "approval": [],
                              "rolls": "",
                              "goto": "",
