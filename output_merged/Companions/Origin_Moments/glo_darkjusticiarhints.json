                    },
                    "OM_Shadowheart_AOM_3": {
                      "id": "OM_Shadowheart_AOM_3",
                      "speaker": "Shadowheart",
                      "text": "Perhaps the Mother Superior has her reasons. Perhaps you are not ready.",
                      "context": "",
                      "checkflags": [],
